@model IList<Blog.Retrievers.Article.ArticleDataResult>

<div class="articles container">
@{
    int countInRow = 3;
}

@for(int i = 0; i < Model.Count; i++)
{
    if(i % countInRow == 0)
    {
        @:<div class="row">
    }

    <div class="col-4">
        @await Html.PartialAsync("_ArticlePartial", Model[i])
    </div>

    if(i % countInRow == (countInRow - 1))
    {
        @:</div>
    }
}

</div>